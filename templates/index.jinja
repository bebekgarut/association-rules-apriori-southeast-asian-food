                      {% for bahan in hasil.bahan_resep %}
                        <li class="mb-1">â€¢ {{ bahan }}</li>
                      {% endfor %}
                    </ul>
                  </div>
                </div>
              {% endif %}
            </div>
        </div>
      </div>
    </section>
    {% endif %}

